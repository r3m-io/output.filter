{
    "System": {
        "Middleware": {
            "create": {
                "validate": {
                    "uuid": [
                        {
                            "is.uuid": true
                        }
                    ],
                    "route": [
                        {
                            "is.unique": {
                                "class": "System.Middleware",
                                "attribute": [
                                    "route",
                                    "options.priority"
                                ]
                            }
                        }
                    ],
                    "options": {
                        "priority": [
                            {
                                "integer": ">-100"
                            },
                            {
                                "integer": "<1000"
                            }
                        ]
                    }
                }
            },
            "put": {
                "validate": {
                    "uuid": [
                        {
                            "is.uuid": true
                        }
                    ],
                    "route": [
                        {
                            "is.unique": {
                                "class": "System.Middleware",
                                "attribute": [
                                    "route",
                                    "options.priority"
                                ]
                            }
                        }
                    ]
                }
            },
            "patch": {
                "validate": {
                    "uuid": [
                        {
                            "is.uuid": true
                        }
                    ],
                    "route": [
                        {
                            "is.unique": {
                                "class": "System.Middleware",
                                "attribute": [
                                    "route",
                                    "options.priority"
                                ]
                            }
                        }
                    ]
                }
            }
        }
    }
}